<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/ivSuperheroe"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/black"/>

            <TextView
                android:id="@+id/tvSuperheroName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="21sp"
                app:layout_constraintStart_toEndOf="@id/ivSuperheroe"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                tools:text="Spider-Man" />

            <TextView
                android:id="@+id/tvRealname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ivSuperheroe"
                app:layout_constraintTop_toBottomOf="@id/tvSuperheroName"
                android:layout_gravity="center_horizontal"
                tools:text="Peter Parker" />


            <TextView
                android:id="@+id/tvPublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ivSuperheroe"
                app:layout_constraintTop_toBottomOf="@id/tvRealname"
                tools:text="Marvel" />
    
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivSuperheroe"
                android:text="BORRAR"
                android:backgroundTint="@color/red"/>


</androidx.constraintlayout.widget.ConstraintLayout>